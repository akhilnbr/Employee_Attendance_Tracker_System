@model Employee_Attendence_Tracker.Models.ForgotPass

<style>
    .container {
        width: 600px;
    }

    .body-content {
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 50px;
    }

    .breadcrumb {
        background-color: #f5f5f5;
    }

    body {
        font-family: 'Times New Roman', Times, serif;
        background-image: url('../../images/SplitShire-03692-1800x1200.jpg');
    }
</style>

<div class="breadcrumb">




    <h2 class="text-center text-success table-hover "><b>New Password</b></h2><span></span>

    <div class="breadcrumb">

        <table class="table  table-condensed ">
            @Html.AntiForgeryToken()


            @using (Html.BeginForm("ConfirmPassword", "Emp", FormMethod.Post))

            {

                <tr>
                    <td>@Html.DisplayName("Password")</td>
                    <td>@Html.TextBoxFor(m => m.Password, new { @class = "form-control",type="password" })</td>


                </tr>
                <tr>
                    <td>@Html.DisplayName("Confirm Password")</td>

                    <td>@Html.TextBox("Pasword","", new { @class = "form-control",type="password" })</td>

                </tr>
                <tr style="position: center">

                    <td><input type="submit" value="Create password" class="btn btn-success" style="margin-left: 110%" /></td>



                </tr>
            }






        </table>

    </div>



</div>


