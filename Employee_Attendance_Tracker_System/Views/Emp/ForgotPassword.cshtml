@model WebApplication1.Models.ForgotPass


<style>
    .container {
        width: 600px;
    }

    .body-content {
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 50px;
    }

    .breadcrumb {
        background-color: #f5f5f5;
    }

    body {
        font-family: 'Times New Roman', Times, serif;
        background-image: url('../../images/SplitShire-03692-1800x1200.jpg');
    }
</style>

<div class="breadcrumb">




    <h2 class="text-center text-success table-hover "><b>Forgot Password?</b></h2><span></span>

    <div class="breadcrumb">

        <table class="table  table-condensed ">
            @Html.AntiForgeryToken()


            @using (Html.BeginForm("ForgotPassword", "Emp", FormMethod.Post))

            {

                <tr>
                    <td>@Html.DisplayName("Phone")</td>
                    <td>@Html.TextBoxFor(m=>m.phone, new { @class = "form-control" })</td>


                </tr>
                <tr>
                    <td>@Html.DisplayName("Email")</td>

                    <td>@Html.TextBoxFor(m=>m.Email,new { @class = "form-control" })</td>

                </tr>
                <tr style="position: center">

                    <td><input type="submit" value="Next->" class="btn btn-success" style="margin-left: 105%"  /></td>



                </tr>
            }






        </table>

    </div>



</div>  


@ViewBag.Status

